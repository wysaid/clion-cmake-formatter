{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: compile",
            "type": "npm",
            "script": "compile",
            "detail": "Compile TypeScript to JavaScript",
            "problemMatcher": "$tsc",
            "group": {
                "kind": "build"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "npm: watch",
            "type": "npm",
            "script": "watch",
            "detail": "Watch and compile TypeScript on changes",
            "isBackground": true,
            "problemMatcher": "$tsc-watch",
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "npm: lint",
            "type": "npm",
            "script": "lint",
            "detail": "Check code quality with ESLint",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "test",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "npm: test:unit",
            "type": "npm",
            "script": "test:unit",
            "detail": "Run unit tests",
            "problemMatcher": [],
            "group": {
                "kind": "test"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true,
                "focus": false
            }
        },
        {
            "label": "npm: package",
            "type": "npm",
            "script": "package",
            "detail": "Package the VS Code extension",
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
