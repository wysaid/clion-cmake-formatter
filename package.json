{
    "name": "clion-cmake-format-monorepo",
    "version": "1.5.0",
    "private": true,
    "description": "Monorepo for CMake formatter with CLion-compatible style",
    "packageManager": "pnpm@9.15.4",
    "engines": {
        "node": ">=18",
        "pnpm": ">=9.0.0"
    },
    "scripts": {
        "preinstall": "node scripts/check-pnpm.js",
        "build": "pnpm --filter @cc-format/core build && pnpm --filter cc-format build && pnpm --filter clion-cmake-format build",
        "build:core": "pnpm --filter @cc-format/core build",
        "build:cli": "pnpm --filter cc-format build",
        "build:vscode": "pnpm --filter clion-cmake-format build",
        "clean": "pnpm --recursive run clean && rm -rf dist",
        "compile": "pnpm run build",
        "watch": "pnpm --filter clion-cmake-format run watch",
        "lint": "eslint \"packages/*/src/**/*.ts\"",
        "test": "mocha \"test/**/*.test.ts\" --exclude \"test/integration/**\"",
        "test:unit": "mocha \"test/**/*.test.ts\" --exclude \"test/integration/**\"",
        "test:integration": "mocha \"test/integration/**/*.test.ts\"",
        "test:all": "mocha \"test/**/*.test.ts\"",
        "test:clion": "node scripts/validate-with-clion.js",
        "package:vscode": "bash scripts/package-vscode.sh",
        "publish:core": "cd packages/core && pnpm publish",
        "publish:cli": "cd packages/cli && pnpm publish",
        "publish:vscode": "cd packages/vscode && vsce publish",
        "verify-symlinks": "bash scripts/verify-symlinks.sh"
    },
    "devDependencies": {
        "@types/jsdom": "^27.0.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.11.0",
        "@typescript-eslint/eslint-plugin": "^8.51.0",
        "@typescript-eslint/parser": "^8.51.0",
        "@vscode/test-electron": "^2.3.8",
        "@vscode/vsce": "^2.22.0",
        "eslint": "^8.56.0",
        "jsdom": "^27.4.0",
        "mocha": "^10.2.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.21.0",
        "typescript": "^5.3.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wysaid/clion-cmake-format"
    },
    "license": "MIT"
}
