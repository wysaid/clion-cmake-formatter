{
    "name": "clion-cmake-format-monorepo",
    "version": "1.4.0",
    "private": true,
    "description": "Monorepo for CMake formatter with CLion-compatible style",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "npm run build:core && npm run build:cli && npm run build:vscode",
        "build:core": "npm run build -w @cc-format/core",
        "build:cli": "npm run build -w cc-format",
        "build:vscode": "npm run build -w clion-cmake-format",
        "clean": "npm run clean --workspaces --if-present && rm -rf dist",
        "compile": "npm run build",
        "watch": "npm run watch -w clion-cmake-format",
        "lint": "eslint 'packages/*/src/**/*.ts'",
        "test": "mocha 'test/**/*.test.ts' --exclude 'test/integration/**'",
        "test:unit": "mocha 'test/**/*.test.ts' --exclude 'test/integration/**'",
        "test:integration": "mocha 'test/integration/**/*.test.ts'",
        "test:all": "mocha 'test/**/*.test.ts'",
        "test:clion": "node scripts/validate-with-clion.js",
        "package:vscode": "bash scripts/package-vscode.sh",
        "publish:core": "npm publish -w @cc-format/core",
        "publish:cli": "npm publish -w cc-format",
        "publish:vscode": "cd packages/vscode && vsce publish",
        "verify-symlinks": "bash scripts/verify-symlinks.sh"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.11.0",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "@vscode/test-electron": "^2.3.8",
        "@vscode/vsce": "^2.22.0",
        "eslint": "^8.56.0",
        "mocha": "^10.2.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.21.0",
        "typescript": "^5.3.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wysaid/clion-cmake-format"
    },
    "license": "MIT",
    "engines": {
        "node": ">=18",
        "npm": ">=9"
    }
}
